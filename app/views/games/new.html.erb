<h1>New Game</h1>
<div class="container">
  <div class="letter">
  <% @letters.each do |letter|%>
  <span><%= letter %></span>
  <% end %>
  </div>

  <br>
  <form action="/score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters_options, @letters %>
    <label class="user-label" for="">What is the longest word you can find?</label>
    <br>
    <div class="form-control">
      <input class="input-text" type="text" name="user_input" id="">
      <input class= "button" type="submit" name="" value="play" id="">
    </div>
  </form>
</div>
